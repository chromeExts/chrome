{
  "manifest_version": 2,
  "name": "night",
  "description": "night",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "night",
    "default_icon": "icons/sun.png"
  },
  "permissions": [
    "activeTab",
    "tabs", "http://*/*", "https://*/*"
  ]
